.unsere-tiere {
    &__container {
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
        background: var(--background);
        color: var(--text);
    }

    &__title {
        font-size: 2rem;
        margin: 1.5rem 0;
        color: var(--pink);
    }

    &__input-group {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 0.5rem;

        @media (max-width: 480px) {
            flex-direction: column;
        }
    }

    &__input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 1px solid var(--neutral-50);
        border-radius: 8px;
        background: var(--neutral-00);
        color: var(--background);
        font-size: 1rem;

        @media (max-width: 480px) {
            width: 100%;
        }
    }

    &__button {
        padding: 0.75rem 1.5rem;
        background-color: var(--green);
        color: var(--background);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 600;
        transition: background-color 0.2s ease;
        width: 200px;

        &:hover {
            background-color: var(--link-hover);
        }

        @media (max-width: 480px) {
            width: 100%;
        }
    }

    &__message {
        color: var(--error);
        margin-bottom: 1rem;
    }

    &__count {
        margin-bottom: 1.5rem;
        color: var(--yellow);
    }

    &__list {
        list-style: none;
        padding: 0;
    }

    &__list-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        margin-bottom: 0.75rem;
        border-radius: 6px;
        background: var(--neutral-80);
        color: var(--neutral-10);
        font-size: 1.1rem;
    }

    &__name {
        font-size: 1.5rem;
        flex: 1;
    }

    &__user-initial {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-left: 0.5rem;
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        font-size: 0.75rem;
        font-weight: bold;
        color: var(--background);
    }

    &__stats {
        margin: 2rem 0;
        padding: 1rem;
        background: var(--neutral-80);
        border-radius: 8px;
        color: var(--neutral-10);
    }

    &__stats h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    &__stats-item {
        margin-bottom: 1rem;
    }

    &__stats-label {
        font-size: 1.4rem;
        margin-bottom: 0.3rem;
    }

    &__stats-bar {
        background: var(--neutral-60);
        border-radius: 6px;
        height: 8px;
        overflow: hidden;
    }

    &__stats-fill {
        height: 100%;
        transition: width 0.4s ease;
        border-radius: 6px;
    }

    &__name-dialog {
        text-align: center;
        margin: 2rem 0;

        p {
            margin-bottom: 3rem;
        }
    }

    &__name-options {
        display: flex;
        flex-wrap: wrap;
        gap: 5rem;
        justify-content: center;
        margin-top: 1rem;
        position: relative;
    }

    &__user-info {
        display: flex;
        justify-content: flex-end; /* Rechtsbündig */
        align-items: center;
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        font-size: 0.85rem;
        width: fit-content; /* ← Das ist entscheidend */
        margin-left: auto; /* ← sorgt zusätzlich für Rechtsausrichtung im flex/grid-Kontext */
        background: var(--neutral-20);
        color: var(--background);
    }

    &__logout-button {
        background: none;
        border: none;
        color: inherit;
        text-decoration: underline;
        cursor: pointer;
    }

    &__rules {
        background: var(--neutral-80);
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
        font-size: 1.4rem;
        line-height: 1.5;
    }

    &__user-card {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    &__user-card:nth-of-type(3) .unsere-tiere__user-image {
        top: 10px;
    }

    &__user-image {
        height: 100px;
        width: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 0.5rem;
        cursor: pointer;
    }

    &__user-image--jana {
        object-position: center -8px;
    }

    &__user-image--kathi {
        object-position: center -13px;
    }

    &__tag-option {
        font-size: 1rem;
        padding: 1.4rem 0.8rem 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        color: var(--background);
        text-align: center;
        white-space: nowrap;
        margin-top: -20px;
        width: 180px;
    }

    &__actions button {
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;

        img {
            width: 1.5rem;
            height: 1.5rem;
            margin-left: 1rem;
        }
    }
}

.tag-kathi {
    background: var(--yellow);
    font-size: 2rem;
}

.tag-jana {
    background: var(--pink);
    font-size: 2rem;
}

.tag-bob {
    background: var(--link);
    font-size: 2rem;
}
