:root {
    --sand: #f5ede0;
    --warm: #fff9f0;
    --peach: #e8a477;
    --coral: #d97c5a;
    --sage: #a8b5a0;
    --olive: #7a8972;
    --text: #2a2a2a;
    --text-light: #666666;
    --text-lighter: #999999;
    --border: #e5ddd0;
    --white: #ffffff;
}

/* =========================
PAGE
========================= */
.pistachio-house {
    position: fixed;
    inset: 0;
    overflow: auto;
    background: var(--warm);
    color: var(--text);
    font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 16px;
    line-height: 1.7;
    color: var(--text);
    background: var(--warm);
    font-weight: 300;

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    strong, b {
        font-weight: 600;
    }

    a {
        color: var(--coral);
        text-decoration: none;
        transition: opacity 0.2s;
    }

    a:hover {
        opacity: 0.7;
    }

    header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(255, 249, 240, 0.95);
        backdrop-filter: blur(8px);
        border-bottom: 1px solid var(--border);
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 16px 20px;
    }

    .brand {
        font-family: 'Playfair Display', serif;
        font-size: 20px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .nav-links {
        display: flex;
        gap: 8px;
        margin-top: 12px;
        flex-wrap: wrap;
    }

    .nav-links a {
        padding: 6px 14px;
        font-size: 14px;
        color: var(--text-light);
        border: 1px solid var(--border);
        border-radius: 20px;
        background: var(--white);
        font-weight: 400;
    }

    .nav-links a:hover {
        opacity: 1;
        border-color: var(--coral);
        color: var(--coral);
    }

    main {
        max-width: 680px;
        margin: 0 auto;
        padding: 40px 20px 80px;
    }

    .hero {
        margin-bottom: 80px;
    }

    h1 {
        font-family: 'Playfair Display', serif;
        font-size: clamp(36px, 8vw, 56px);
        font-weight: 600;
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -0.5px;
    }

    .subtitle {
        font-size: 18px;
        line-height: 1.8;
        color: var(--text-light);
        margin-bottom: 32px;
        font-weight: 300;
    }

    .meta-pills {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 32px;
    }

    .pill {
        padding: 8px 16px;
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: 20px;
        font-size: 14px;
        color: var(--text-light);
        font-weight: 400;
    }

    .pill strong {
        color: var(--text);
        margin-right: 4px;
    }

    .button-group {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 24px;
    }

    .btn {
        padding: 12px 20px;
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        color: var(--text);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn:hover {
        border-color: var(--coral);
        background: var(--sand);
    }

    .btn:active {
        transform: scale(0.98);
    }

    .quick-box {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 32px;
    }

    .quick-box h3 {
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--olive);
        margin-bottom: 16px;
    }

    .quick-items {
        display: grid;
        gap: 12px;
    }

    .quick-item {
        display: flex;
        justify-content: space-between;
        gap: 16px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--border);
    }

    .quick-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .quick-item span:first-child {
        color: var(--text-light);
        font-size: 14px;
    }

    .quick-item span:last-child {
        color: var(--text);
        font-weight: 500;
        text-align: right;
        font-size: 14px;
    }

    .note {
        background: var(--sand);
        border-left: 3px solid var(--peach);
        padding: 16px 20px;
        margin: 32px 0;
        border-radius: 4px;
        font-size: 15px;
        color: var(--text);
    }

    section {
        margin-bottom: 80px;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 20px;
        letter-spacing: -0.3px;
    }

    h3 {
        font-size: 16px;
        font-weight: 600;
        margin: 32px 0 16px;
        color: var(--olive);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    p {
        margin-bottom: 20px;
        color: var(--text-light);
        font-weight: 300;
    }

    ul {
        list-style: none;
        margin: 20px 0;
    }

    li {
        margin-bottom: 16px;
        color: var(--text-light);
        position: relative;
        padding-left: 24px;
        font-weight: 300;
    }

    li::before {
        content: 'Â·';
        position: absolute;
        left: 8px;
        color: var(--coral);
        font-weight: 600;
        font-size: 20px;
    }

    li b {
        color: var(--text);
    }

    .divider {
        height: 1px;
        background: var(--border);
        margin: 40px 0;
    }

    .callout {
        background: var(--white);
        border: 1px solid var(--peach);
        border-radius: 8px;
        padding: 20px 24px;
        margin: 32px 0;
    }

    .wa-title {
        font-size: 20px;
        font-family: 'Playfair Display', serif;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text);
    }

    .wa-text {
        margin: 0;
        font-size: 15px;
    }

    .table-wrapper {
        overflow-x: auto;
        margin: 32px 0;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--white);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    th {
        text-align: left;
        padding: 16px;
        background: var(--sand);
        font-weight: 600;
        border-bottom: 1px solid var(--border);
        color: var(--text);
        white-space: nowrap;
        font-size: 13px;
    }

    td {
        padding: 16px;
        border-bottom: 1px solid var(--border);
        color: var(--text-light);
        font-weight: 300;
    }

    tr:last-child td {
        border-bottom: none;
    }

    td b {
        color: var(--text);
    }

    footer {
        margin-top: 80px;
        padding-top: 40px;
        border-top: 1px solid var(--border);
        text-align: center;
        color: var(--text-lighter);
        font-size: 14px;
    }

    @media (min-width: 640px) {
        main {
            padding: 60px 40px 100px;
        }

        .header-content {
            padding: 20px 40px;
        }

        .nav-links {
            margin-top: 16px;
        }

        section {
            margin-bottom: 100px;
        }
    }

    @media (min-width: 768px) {
        html {
            scroll-padding-top: 80px;
        }

        .hero {
            margin-bottom: 100px;
        }

        .subtitle {
            font-size: 20px;
        }
    }

    @media print {
        header {
            position: static;
        }

        .button-group, .nav-links {
            display: none;
        }

        /* global print background */
        :global(body) {
            background: white !important;
        }

        :global(#root) {
            background: white !important;
        }
    }
}
