$breakpoint-tablet = 481px
$breakpoint-desktop = 769px


html
  font-size 62.5%
  font-smooth always
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


.site-wrapper
  background var(--background)
  max-width 100vw // full screen width
  margin 0 auto
  color var(--neutral-90) // default text color
  font-family var(--font-family-regular)
  font-size var(--font-size-xsmall)
  line-height var(--line-height-xsmall)
  position relative
  min-height 100vh
  display flex
  flex-direction column

main
  margin-top 6rem // to adjust for the header height
  // padding: 0 var(--space-s);
  padding 0 5%

  @media (min-width $breakpoint-desktop)
    padding 0 10%
  

a
  text-decoration inherit
  color currentColor


input, textarea
  background-color var(--primary-neutral)
  color var(--secondary-dark)
  font-weight var(--font-weight-light)
  font-family var(--font-family-regular)
  line-height 2
  border 1px solid var(--accent-light)
  padding 0.25rem 0.75rem
  font-size 1.4rem

  &:focus
    outline 0

select
  display inline-block
  width fit-content
  height 3.4rem
  border-radius 500px
  border 1px solid var(--primary-dark)
  color var(--primary-dark)
  background-color var(--primary-neutral)
  appearance none
  background-repeat no-repeat
  background-position right 2rem center
  padding 0 4.8rem 0 3.2rem
  // background-image url('/assets/svgs/chevron-down.svg')
  background-size 12px

  &:disabled
    border-color var(--secondary-light)
    color var(--secondary-light)
    background-image none
    padding 0 3.2rem


.html-editor-base-style
  a
    color $color-orange
    text-decoration none

  b,
  strong 
    font-weight bold
  
  em 
    font-style italic

  p 
    display block
    margin-block-start 1em
    margin-block-end 1em
    margin-inline-start 0
    margin-inline-end 0

  s
    text-decoration line-through

  u
    text-decoration underline

  ul, ol
    display block
    margin-block-start 1em
    margin-block-end 1em
    margin-inline-start 0px
    margin-inline-end 0px
    padding-inline-start 40px

  ul
    list-style-type disc

  ol
    list-style-type decimal

  li
    display list-item
    text-align -webkit-match-parent