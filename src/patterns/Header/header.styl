.header 
  margin: 0;
  // padding: 0 var(--space-s);
  padding: 0 14px;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  transition: top 0.5s;
  max-width: calc(100vw);
  z-index: var(--z-index-highest);
  background var(--background);


.header__content-wrapper 
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 6rem;


